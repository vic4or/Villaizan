generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Puntos_Producto {
  id               String  @id @default(uuid())     
  cantidadPuntos   Int
  descripcion      String?
  estado           String
  fechaActivo      DateTime
  fechaInactivo    DateTime?
  idProducto       String @unique

  // Relaci√≥n con la tabla vi_producto
  producto         Producto @relation(fields: [idProducto], references: [id])

  @@map("vi_puntos_producto")
}

model Producto {
  id String @id @map("id")  // id en vi_producto es varchar(50)

  puntoProducto Puntos_Producto? 

  @@map("vi_producto")  // Mapea este modelo a la tabla "vi_producto"
}
